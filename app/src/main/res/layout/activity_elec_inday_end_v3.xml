<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/red_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/car_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/license_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/car_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rect_black_green"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black_tv_87"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/license_num_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp">

                    <RelativeLayout
                        android:id="@+id/re01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/car_color_iv"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/car_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/car_color_iv"
                            android:textColor="@color/black_tv_87"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/endurance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_toRightOf="@+id/re01"
                        android:textColor="@color/black_tv_87"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/car_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/re01"
                        android:layout_below="@+id/re01"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black_tv_87"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/endurance_tv"
                        android:layout_below="@+id/endurance_tv"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:id="@+id/battery_re"
                            android:layout_width="40dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/battery_icon_v3">

                            <com.sxcapp.www.CustomerView.BatteryView
                                android:id="@+id/battery_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="1dp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/battery_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/battery_re"
                            android:textColor="@color/black_tv_87"
                            android:textSize="10sp" />
                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_white"
                android:elevation="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/fetch_store_re"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_view_click_white_gray">

                    <ImageView
                        android:id="@+id/fetch_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/fetch_icon_dia_v3" />

                    <TextView
                        android:id="@+id/fetch_store_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="12dp"
                        android:layout_toRightOf="@+id/fetch_iv"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/black_tv_87"
                        android:textSize="13sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/lightGray2" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/select_g_store_re"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/selector_view_click_white_gray">

                    <ImageView
                        android:id="@+id/g_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/g_icon_dia_v3" />

                    <TextView
                        android:id="@+id/g_store_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/g_iv"
                        android:textColor="@color/black_tv_87"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/change_g_lo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:gravity="center_vertical"
                        android:text="更换"
                        android:textColor="@color/black_tv_87"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/change_g_lo_tv"
                        android:background="@color/lightGray2" />


                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="30dp"
                android:background="@color/lightGray2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/re05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <LinearLayout
                        android:id="@+id/unlock_car_lin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/unlock_icon_v3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="一键开锁"
                            android:textColor="@color/black_tv_87"
                            android:textSize="13sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="43dp"
                    android:layout_toLeftOf="@+id/re05">

                    <LinearLayout
                        android:id="@+id/short_lock_lin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/lock_icon_v3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:text="临时锁车"
                            android:textColor="@color/black_tv_87"
                            android:textSize="13sp" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/blow_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="43dp"
                    android:layout_toRightOf="@+id/re05"
                    android:background="@drawable/selector_view_click_white_gray"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@mipmap/blow_back_v3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:text="鸣笛寻车"
                        android:textColor="@color/black_tv_87"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_white"
                android:elevation="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:elevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="费用明细说明"
                        android:textColor="@color/black_tv_87"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:id="@+id/hide_cost_re"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/hide_cost_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/expand_icon_v3" />

                    </RelativeLayout>
                </RelativeLayout>

                <com.sxcapp.www.CustomerView.ExpandableLayout
                    android:id="@+id/expandable_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    app:el_expanded="true">

                    <LinearLayout
                        android:id="@+id/cost_info_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/total_cost_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/iv_cost"
                                android:textColor="@color/top_bar_red"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/iv_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="false"
                                android:layout_marginLeft="12dp"
                                android:text="总计:"
                                android:textColor="@color/black_tv_87"
                                android:textSize="13sp" />

                        </RelativeLayout>
                    </LinearLayout>
                </com.sxcapp.www.CustomerView.ExpandableLayout>

            </LinearLayout>


            <Button
                android:id="@+id/end_appoint_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_btn_click_bg_green"
                android:gravity="center"
                android:text="结束用车"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </com.sxcapp.www.CustomerView.BounceScrollView>

</LinearLayout>

