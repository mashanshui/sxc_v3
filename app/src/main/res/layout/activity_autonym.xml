<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/red_top_bar" />

    <LinearLayout
        android:id="@+id/authentication_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:orientation="vertical"
        android:visibility="gone">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#f0f0f0"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="温馨提示:"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="20dp"
                        android:text="为了保证您的身份信息安全，免于被盗用，请拍照上传"
                        android:textColor="#969696"
                        android:textSize="15sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#f0f0f0"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="身份证正面:"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/idcard_front_re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/idcard_front_iv"
                        android:layout_width="220dp"
                        android:layout_height="145dp"
                        android:background="@mipmap/idcard_front"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/camera" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:background="#f0f0f0"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="驾驶证正面:"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/drive_card_front_re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/drive_card_front_iv"
                        android:layout_width="220dp"
                        android:layout_height="145dp"
                        android:background="@mipmap/drive_card_front"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/camera" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:background="#f0f0f0"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="驾驶证附件正面:"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/drive_card_appendix_front_re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/drive_card_appendix_front_iv"
                        android:layout_width="220dp"
                        android:layout_height="145dp"
                        android:background="@mipmap/drive_card_appendix_front"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/camera" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:background="#f0f0f0"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="手持身份证照片:"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/hand_idcard_re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/hand_idcard_iv"
                        android:layout_width="220dp"
                        android:layout_height="145dp"
                        android:background="@mipmap/hand_idcard"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/camera" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:background="#f0f0f0"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="上传说明:"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="1.照片清晰、无遮光、无反光、信息完整"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="2:工作时间(8:30-17:30)"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/upload_btn"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/confirm_upload_btn" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/authentication_iv"
        android:layout_width="112dp"
        android:layout_height="84dp"
        android:layout_below="@+id/top_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@mipmap/authenticationing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/authentication_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authentication_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="实名认证通过"
        android:textColor="#3c3c3c"
        android:textSize="17sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/go_authen_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/authentication_tv"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rect_or"
        android:gravity="center"
        android:text="去实名认证"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone" />

</RelativeLayout>