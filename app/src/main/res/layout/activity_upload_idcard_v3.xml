<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite">


    <include
        android:id="@+id/top_bar"
        layout="@layout/red_top_bar" />

    <TextView
        android:id="@+id/tv01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="12dp"
        android:background="@color/lightGray2"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="请拍摄你的身份证正面照片参照下图示例"
        android:textColor="@color/black_tv_26" />

    <RelativeLayout
        android:id="@+id/re01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:minHeight="20dp">


        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/id_demo_icon_v3" />

        <ImageView
            android:id="@+id/take_photo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/take_photo_icon_v3" />
    </RelativeLayout>



    <Button

        android:id="@+id/upload_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/selector_btn_click_bg_luxury"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>
