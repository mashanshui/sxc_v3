<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/red_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/re01"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rect_circle_gray"
                android:layout_marginTop="13dp">

                <ImageView
                    android:id="@+id/car_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                   />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re01"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:text="车辆服务及评价"
                android:textColor="@color/black_tv_87"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv01"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/re01"
                android:layout_marginRight="12dp"
                android:text="满意请给五星哦"
                android:textColor="@color/black_tv_26"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/car_remark_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv01"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车辆评价"
                    android:textColor="@color/black_tv_52"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/car_remark_star01"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/car_remark_star02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/car_remark_star03"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/car_remark_star04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/car_remark_star05"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/service_remark_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_remark_lin"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="服务评价"
                    android:textColor="@color/black_tv_52"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/service_remark_star01"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/service_remark_star02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/service_remark_star03"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/service_remark_star04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />

                <ImageView
                    android:id="@+id/service_remark_star05"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/star_gray" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/remark_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_remark_lin"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_gray_hollow"
                android:minHeight="100dp">

                <EditText
                    android:id="@+id/remark_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    android:hint="请您留下其它的积极评价"
                    android:textColorHint="@color/black_tv_26"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                android:id="@+id/view01"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/remark_re"
                android:layout_marginTop="20dp"
                android:background="@color/lightGray2" />

            <LinearLayout
                android:id="@+id/remark_label_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view01"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"></LinearLayout>

            <RelativeLayout
                android:id="@+id/complaint_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remark_label_lin"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_gray_hollow"
                android:minHeight="100dp">

                <EditText
                    android:id="@+id/complaint_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@null"
                    android:hint="投诉意见"
                    android:textColorHint="@color/black_tv_26"
                    android:textSize="13sp" />

            </RelativeLayout>

            <Button
                android:id="@+id/commit_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/complaint_re"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/commit_btn" />

        </RelativeLayout>

    </com.sxcapp.www.CustomerView.BounceScrollView>

</LinearLayout>
