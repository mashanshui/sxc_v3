<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/top"
        layout="@layout/nomorl_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/lightGray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/car_iv"
                    android:layout_width="163dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/car_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3c3c3c"
                        android:textSize="15sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/car_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="13dp"
                    android:textColor="#969696"
                    android:textSize="13sp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预约时间:"
                    android:textColor="#b4b4b4"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/appoint_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/green"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/appoint_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#5a5a5a"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_lo01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="取车地点"
                    android:textColor="#b4b4b4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lease_lo_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_lo01"
                    android:layout_marginTop="21dp"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_lo02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="还车地点"
                    android:textColor="#b4b4b4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/g_lo_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_lo02"
                    android:layout_marginTop="21dp"
                    android:textColor="#5a5a5a"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/lightGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="车牌号:"
                    android:textColor="#b4b4b4"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/license_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/green"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/find_car_tv"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="鸣笛寻车"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/control_lin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/lock_car_re"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="临时锁车"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/lightGray" />

                <RelativeLayout
                    android:id="@+id/unlock_car_re"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="一键开锁"
                        android:textSize="15sp" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="28dp"
                android:background="#f0f0f0"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="计费规则"
                android:textColor="#969696"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/rules_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/exception_tv"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="违规费用"
                android:textColor="#969696"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/exception_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:visibility="gone"></LinearLayout>


            <RelativeLayout
                android:id="@+id/deduction_re"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/deduction_tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="不计免赔"
                    android:textColor="#5a5a5a"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/deduction_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/check_iv"
                    android:textColor="@color/orRed"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/check_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/check" />
            </RelativeLayout>

            <Button
                android:id="@+id/appoint_btn"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rect_or"
                android:gravity="center"
                android:text="取消预约"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/total_cost_lin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="总计消费(元):"
                    android:textColor="#5a5a5a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/total_cost_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/lightGray" />
            <LinearLayout
                android:id="@+id/discount_lin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="优惠券减免(元):"
                    android:textColor="#5a5a5a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/discount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/use_time_lin"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="使用时间(分钟):"
                    android:textColor="#5a5a5a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/use_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/green"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/end_appoint_btn"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rect_green"
                android:gravity="center"
                android:text="结束用车"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>

    </com.sxcapp.www.CustomerView.BounceScrollView>

</RelativeLayout>