<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/red_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/tv_lin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/lightGray2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:text="请认真拍摄照片以及如实填写信息"
                    android:textColor="@color/black_tv_52"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lin"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp">

                    <RelativeLayout
                        android:id="@+id/re01"
                        android:layout_width="150dp"
                        android:layout_height="110dp">

                        <ImageView
                            android:id="@+id/one_iv"
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:background="@color/lightGray2"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/take_photo_iv01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/take_photo_icon_v3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/user_info_transparent"
                            android:gravity="center"
                            android:text="担保人身份证正面"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/re01">

                        <ImageView
                            android:id="@+id/two_iv"
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:background="@color/lightGray2"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/take_photo_iv02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/take_photo_icon_v3" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/user_info_transparent"
                            android:gravity="center"
                            android:text="担保人身份证反面"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp">

                    <RelativeLayout
                        android:id="@+id/re02"
                        android:layout_width="150dp"
                        android:layout_height="110dp">

                        <ImageView
                            android:id="@+id/three_iv"
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:background="@color/lightGray2"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/take_photo_iv03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/take_photo_icon_v3" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/user_info_transparent"
                            android:gravity="center"
                            android:text="担保人资质证明"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/re02">

                        <ImageView
                            android:id="@+id/four_iv"
                            android:layout_width="150dp"
                            android:layout_height="110dp"
                            android:background="@color/lightGray2"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/take_photo_iv04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/take_photo_icon_v3" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/user_info_transparent"
                            android:gravity="center"
                            android:text="其它备注照片"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/name_re"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lin01"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入真实姓名"
                    android:paddingLeft="12dp"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/name_delete_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/delete_conten_icon_v3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/name_re"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/card_number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:digits="0123456789xX"
                    android:gravity="center_vertical"
                    android:hint="请输入身份证号"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/card_number_delete_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/delete_conten_icon_v3" />
            </RelativeLayout>
        </RelativeLayout>
    </com.sxcapp.www.CustomerView.BounceScrollView>

    <Button
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/selector_btn_click_bg_luxury"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>
