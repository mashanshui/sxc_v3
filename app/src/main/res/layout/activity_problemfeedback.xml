<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/red_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/car_number_edit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rect_edit_gray"
                android:gravity="center"
                android:hint="请输入车牌号，如津A12345"
                android:textColor="#5a5a5a"
                android:textColorHint="#b4b4b4"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/check_one_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_number_edit"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/box_one"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/box_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="车辆太脏"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_two_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_number_edit"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/box_two"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/box_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="车门无法打开"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_three_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_one_lin"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/box_three"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/box_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="车辆损坏"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_four_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_one_lin"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/box_four"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/box_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="举报违停"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_five_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_four_lin"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/box_five"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/box_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="电量或油量不足"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check_six_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_three_lin"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/box_six"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/box_uncheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="其它"
                    android:textColor="#5a5a5a"
                    android:textSize="16sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/detail_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_five_lin"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rect_edit_gray"
                android:hint="留言说明您的问题或建议，我们可以更准确的采纳和处理。"
                android:lineSpacingExtra="11dp"
                android:maxLength="150"
                android:minHeight="140dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#5a5a5a"
                android:textColorHint="#b4b4b4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_edit"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:text="上传照片(暂时只支持上传一张照片)"
                android:textColor="#5a5a5a"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/upload_pic_iv"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_below="@+id/tv01"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="19dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/add_pic" />

            <Button
                android:id="@+id/commit_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/upload_pic_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/rect_or"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/commit_btn" />

        </RelativeLayout>
    </com.sxcapp.www.CustomerView.BounceScrollView>


</LinearLayout>