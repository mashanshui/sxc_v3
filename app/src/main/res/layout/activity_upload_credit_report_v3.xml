<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/red_top_bar" />

    <LinearLayout
        android:id="@+id/tv_lin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top_bar"
        android:background="@color/lightGray2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="请拍摄你的征信报告并上传"
            android:textColor="@color/black_tv_52"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:id="@+id/re01"
                android:layout_width="150dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/one_iv"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/lightGray2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/take_photo_iv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/take_photo_icon_v3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/user_info_transparent"
                    android:gravity="center"
                    android:text="第一页"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/re01">

                <ImageView
                    android:id="@+id/two_iv"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/lightGray2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/take_photo_iv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/take_photo_icon_v3" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/user_info_transparent"
                    android:gravity="center"
                    android:text="第二页"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:id="@+id/re02"
                android:layout_width="150dp"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/three_iv"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/lightGray2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/take_photo_iv03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/take_photo_icon_v3" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/user_info_transparent"
                    android:gravity="center"
                    android:text="第三页"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/re02">

                <ImageView
                    android:id="@+id/four_iv"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/lightGray2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/take_photo_iv04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/take_photo_icon_v3" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/user_info_transparent"
                    android:gravity="center"
                    android:text="第四页"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginRight="12dp"
        android:background="@drawable/rect_luxury"
        android:text="上传"
        android:textSize="15sp" />

</RelativeLayout>
