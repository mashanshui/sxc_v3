<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/red_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp">

                <RelativeLayout
                    android:id="@+id/add_re01"
                    android:layout_width="150dp"
                    android:layout_height="110dp">

                    <ImageView
                        android:id="@+id/add_pic01"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/add_pic_v3" />

                    <ImageView
                        android:id="@+id/cancel_iv01"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@mipmap/delete_conten_icon_v3"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_re02"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/add_re01">

                    <ImageView
                        android:id="@+id/add_pic02"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/add_pic_v3"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancel_iv02"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@mipmap/delete_conten_icon_v3"
                        android:visibility="invisible" />


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_re02"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/add_re03"
                    android:layout_width="150dp"
                    android:layout_height="110dp">

                    <ImageView
                        android:id="@+id/add_pic03"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/add_pic_v3"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancel_iv03"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@mipmap/delete_conten_icon_v3"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_re04"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/add_re03">

                    <ImageView
                        android:id="@+id/add_pic04"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/add_pic_v3"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancel_iv04"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@mipmap/delete_conten_icon_v3"
                        android:visibility="invisible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_re03"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/add_re05"
                    android:layout_width="150dp"
                    android:layout_height="110dp">

                    <ImageView
                        android:id="@+id/add_pic05"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/add_pic_v3"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancel_iv05"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@mipmap/delete_conten_icon_v3"
                        android:visibility="invisible" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_re06"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/add_re05">

                    <ImageView
                        android:id="@+id/add_pic06"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/add_pic_v3"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancel_iv06"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="center"
                        android:src="@mipmap/delete_conten_icon_v3"
                        android:visibility="invisible" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_white2"
                android:minHeight="100dp">

                <EditText
                    android:id="@+id/content_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:hint="请输入配文150字以内"
                    android:maxLength="150"
                    android:textColor="@color/black_tv_52"
                    android:textColorHint="@color/black_tv_26"
                    android:textSize="13sp" />
            </RelativeLayout>


            <Button
                android:id="@+id/commit_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/selector_btn_click_bg_red"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </com.sxcapp.www.CustomerView.BounceScrollView>
</LinearLayout>

