                android:layout_height="wrap_content">

                <com.sxcapp.www.CustomerView.InfiniteViewPager
                    android:id="@+id/car_vp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />

                <ImageView
                    android:id="@+id/back_iv"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="35dp"
                    android:src="@mipmap/back_white" />

                <!--<ImageView-->
                    <!--android:layout_width="19dp"-->
                    <!--android:layout_height="19dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="12dp"-->
                    <!--android:layout_marginTop="35dp"-->
                    <!--android:src="@mipmap/share" />-->

                <TextView
                    android:id="@+id/car_number"
                    android:layout_width="185dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="178dp"
                    android:background="@drawable/rect_num"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="178dp"
                    android:background="@drawable/rect_num">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/pic_car" />

                        <TextView
                            android:id="@+id/image_index_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/image_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/car_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="22dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/car_name_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报价:"
                    android:textColor="#5a5a5a"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/orRed"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"
                    android:textColor="@color/orRed"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/new_car_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#b4b4b4"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/split_iv01"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="22dp"
                android:background="@mipmap/split" />

            <LinearLayout
                android:id="@+id/service_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务保障"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/servicefee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#b4b4b4"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sure_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:id="@+id/sure_lin01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="一年两万公里保障"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sure_lin02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="支持车辆延保时间"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/sure_lin01"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="259项专业检测"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/sure_lin02"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="专人陪同办理过户"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginTop="22dp"
                android:background="@mipmap/split" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="22dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mileage_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="里程数"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/emission_standard_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16sp"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="排放标准"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/licensing_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="上牌时间"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/displacement_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="排量"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/oper_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="上架时间"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/oper_city_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="上牌地点"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />

                </LinearLayout>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="#d2d2d2" />

            <TextView
                android:id="@+id/more_config_tv"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:gravity="center"
                android:text="查看更多参数配置"
                android:textColor="#969696"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="@mipmap/split" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="22dp">

                <ImageView
                    android:id="@+id/owner_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/user" />

                <TextView
                    android:id="@+id/owner_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/owner_iv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/owner_iv"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/owner_iv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/owner_iv"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@mipmap/map_lo" />

                    <TextView
                        android:id="@+id/owner_dict_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#b4b4b4"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/look_car_tv"
                    android:layout_width="91dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rect_circle_rectangle"
                    android:gravity="center"
                    android:text="咨询看车"
                    android:textColor="@color/orRed"
                    android:textSize="16sp" />
            </RelativeLayout>

                <TextView
                    android:id="@+id/instruction_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="13sp"
                    android:textColor="#5a5a5a"
                    android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/annual_inspection_end_time_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/circle_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="年检到期："
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/annual_inspection_end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tcl_end_time_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/circle_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="交强险到期："
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tcl_end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/annual_inspection_end_time_lin"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/circle_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="商业险到期："
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/vcl_end_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tcl_end_time_lin"
                    android:layout_below="@+id/tcl_end_time_lin"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/circle_point" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="过户次数："
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transfer_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:background="@mipmap/split" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:text="认证信息"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/auth_iv"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="车辆外观"
                android:textColor="#969696"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/appearance_iv"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="车辆内饰"
                android:textColor="#969696"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/trim_iv"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="底盘及发动机"
                android:textColor="#969696"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/engine_tv"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />
        </LinearLayout>

    </com.sxcapp.www.CustomerView.BounceScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_height="49dp">
        <Button
            android:id="@+id/call_service_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#f18526"
            android:text="联系客服"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/subscribe_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orRed"
            android:text="预约看车"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>
