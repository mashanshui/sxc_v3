<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/red_top_bar" />

    <com.sxcapp.www.CustomerView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/balance_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/balance_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/balance_back_v3" />

                <TextView
                    android:id="@+id/tv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/balance_iv"
                    android:text="余额"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv01"
                    android:textColor="#c32b1f"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/tv01"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightGray2" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/recharge_discount_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="47dp"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/share_deposit_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/share_deposit_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/share_deposit_back_v3" />

                <TextView
                    android:id="@+id/tv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/share_deposit_iv"
                    android:text="共享押金"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/share_deposit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv02"
                    android:textColor="#b1b20b"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/tv02"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightGray2" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/share_deposit_state_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="74dp"
                android:layout_marginRight="47dp"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/integral_shop_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/integral_shop_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/integral_shop_back_v3" />

                <TextView
                    android:id="@+id/integral_shop_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/integral_shop_iv"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/about_integral_tv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/integral_shop_tv"
                    android:background="@mipmap/question_mask_back"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/integral_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv04"
                    android:textColor="#1c98d8"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/coupon_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/coupon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/coupon_back_v3" />

                <TextView
                    android:id="@+id/tv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/coupon_iv"
                    android:text="优惠券"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/coupon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv05"
                    android:textColor="#e040fb"
                    android:textSize="16sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/useful_coupon_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/useful_coupon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/useful_coupon_back_v3" />

                <TextView
                    android:id="@+id/tv06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/useful_coupon_iv"
                    android:text="可用优惠券"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/useful_coupon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv06"
                    android:textColor="#75000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightGray2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/lightGray2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/invalid_coupon_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/invalid_coupon_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/invaild_coupon_back_v3" />

                <TextView
                    android:id="@+id/tv07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/invalid_coupon_iv"
                    android:text="已失效优惠券"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/invalid_coupon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv07"
                    android:textColor="#75000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightWhite" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#f5f5f5" />

            <RelativeLayout
                android:id="@+id/lease_deposit_re"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@drawable/selector_view_click_white_gray">

                <ImageView
                    android:id="@+id/lease_deposit_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@mipmap/lease_deposit_back_v3" />

                <TextView
                    android:id="@+id/tv08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="37dp"
                    android:layout_toRightOf="@+id/lease_deposit_iv"
                    android:text="随心车押金"
                    android:textColor="@color/black_tv_87"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@mipmap/navi_arrow_right" />

                <TextView
                    android:id="@+id/lease_deposit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/iv08"
                    android:textColor="#b1b30b"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignLeft="@+id/tv08"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lightGray2" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lease_deposit_state_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="47dp"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>
    </com.sxcapp.www.CustomerView.BounceScrollView>

</LinearLayout>
